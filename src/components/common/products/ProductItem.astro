---

export interface Props {
    title: string;
    body: string;
    products: string;

}

const { title, body, products } = Astro.props
---

<div class="px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-20">
    <div class="relative grid md:grid-cols-2 gap-y-8 py-16 items-center overflow-visible">
        <div class="flex flex-col text-brand-gunmetal ">
            <div class="max-w-xl mb-6">
                <h2 class="max-w-lg mb-6 font-sans text-3xl font-bold tracking-tight  sm:text-4xl sm:leading-none">
                    {title}
                </h2>
                <p class="text-base text-brand-charcoal md:text-lg">
                    {body}
                </p>
            </div>
            <hr class="mb-6 border-gray-300" />
            <div class="text-sm font-semibold">{products}</div>
        </div>
        <div class="relative order-first">
            TODO:
        </div>
    </div>
</div>