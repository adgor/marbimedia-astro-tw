---
import { Picture } from '@astrojs/image/components'

import hero from '~/assets/2.webp'

export interface Props {
    title: string;
    body: string;
    products: string;
    contentStyle: string;
    orderItem: string;
    prodImgSrc: any;

}

const { title, body, products, prodImgSrc = { hero }, contentStyle = '', orderItem } = Astro.props
---

<div class="px-4 mx-auto sm:max-w-xl md:max-w-full py-16 lg:max-w-screen-xl md:px-24 lg:px-8">
    <div class="relative grid md:grid-cols-2 gap-y-8 overflow-visible ">
        <div class={`relative ${orderItem}`}>
            <Picture src={prodImgSrc} widths={[800]} sizes="(max-width: 640px) 100vw, 50vw" alt="My hero image" />
        </div>
        <div class={`flex flex-col max-w-sm text-brand-gunmetal ${contentStyle}`}>
            <div class=" mb-6">
                <h2 class="max-w-lg mb-6 font-sans text-3xl font-bold tracking-tight  sm:text-4xl sm:leading-none">
                    {title}
                </h2>
                <p class="text-base product-body-w text-brand-charcoal ">
                    {body}
                </p>
            </div>
            <div class="text-sm font-semibold ">

                {products}
            </div>
        </div>
    </div>
</div>
<style>
