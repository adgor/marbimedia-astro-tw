---
import { Icon } from "astro-icon";

export interface Props {
    title: string;
    body: string;
    iconName: string;
}

const { title, body, iconName } = Astro.props;
---

<div class="max-w-md ">
    <Icon name={iconName} class="h-10 mb-8" />

    <h6 class="mb-4 text-xl font-bold leading-5 uppercase text-brand-gunmetal">
        {title}
    </h6>
    <p class=" text-brand-charcoal body-w">
        {body}
    </p>
</div>

<style>
    .body-w {
        max-width: 340px;
    }
</style>
