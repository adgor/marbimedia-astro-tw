---
import Button from "../Button.astro";
export interface Props {
    title1?: string;
    title2?: string;
}
const { title1 = "Have a project", title2 = "in mind?" } = Astro.props;
---

<section class="py-24 text-white bg-brand-gunmetal">
    <div
        class="container flex   flex-col items-center justify-center p-4 mx-auto space-y-8 md:p-16 md:px-24 xl:px-48"
    >
        <h1 class="mb-2 text-5xl font-bold leading-tight text-center">
            {title1}
            <br class="md:hidden" />
            {title2}
        </h1>

        <Button iconSpan=" hidden" link="#contact">get started now</Button>
    </div>
</section>
